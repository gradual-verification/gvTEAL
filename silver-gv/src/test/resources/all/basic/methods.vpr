field f: Int

method t1() {
    var n: Int
    //:: ExpectedOutput(call.precondition:assertion.false)
    n := t3(-1)
}

method t2() {
    var n: Int := -10
    n := t3(1)
    assert n > 0
    //:: ExpectedOutput(assert.failed:assertion.false)
    assert false
}

method t3(n: Int) returns (r: Int)
    requires n > 0
    ensures r > 0
{
    r := n
}

// test aliasing of return values with other objects
method t4() {
    var a: Ref
    var b: Ref
    var c: Ref

    a, b := t4b()
    c := new()
    assert a != c
    //:: ExpectedOutput(assert.failed:assertion.false)
    assert a != b
}

method t4c() {
    var a: Ref
    var b: Ref
    var c: Ref

    c := new()
    a, b := t4b()
    //:: ExpectedOutput(assert.failed:assertion.false)
    assert a != c
}

method t4b() returns (a: Ref, b: Ref)
