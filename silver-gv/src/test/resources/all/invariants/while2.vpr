field f: Int

method test00(x: Ref) returns (b: Bool)
  requires acc(x.f)
{
  while (b)
    invariant (b ? acc(x.f, 1) : true) // 1/2
  {
    b := !b
  }

  //:: ExpectedOutput(assert.failed:assertion.false)
  assert false
}

method test02(x: Ref) returns (b: Bool)
  requires acc(x.f)
{
  x.f := 1

  //:: ExpectedOutput(while.failed:insufficient.permission)
  while (x.f > 0)
    invariant true
  {
    b := !b
  }
}
